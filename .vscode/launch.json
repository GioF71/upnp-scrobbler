{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: scrobbler",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/upnp_scrobbler/scrobbler.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: scanner",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/upnp_scrobbler/scanner.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: subsonic test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test/subsonic_test.py",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/upnp_scrobbler:${env:PYTHONPATH}"
            },
            "justMyCode": false
        },
        {
            "name": "Python Debugger: regex test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test/regex_test.py",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/upnp_scrobbler:${env:PYTHONPATH}"
            },
            "justMyCode": false
        }

    ]
}
